    <div class="pagination-area mt-15 mb-sm-5 mb-lg-0">
        <nav aria-label="Produits navigation">
            <ul class="pagination justify-content-start">
                {% if currentPage > 1 %}
                    <li class="page-item">
                        <a href="{{ path(path, {page: currentPage - 1, search: search}) }}" class="page-link">&lt;</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <a class="page-link">&lt;</a>    
                    </li>
                {% endif %}
                {% for page in 1..pages %}
                    <li class="page-item {{ (page == currentPage) ? 'active' : '' }}">
                        <a href="{{ path(path, {page: page, search: search}) }}" class="page-link">{{ page }}</a>
                    </li>
                {% endfor %}
                    {% if currentPage < pages %}
                        <li class="page-item">
                            <a href="{{ path(path, {page: currentPage + 1, search: search}) }}" class="page-link">&gt;</a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <a class="page-link">&gt;</a>    
                        </li>
                    {% endif %}
                </li>
            </ul>
        </nav>
    </div>
{% endif %}