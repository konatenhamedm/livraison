                                    <a class="d-flex m-2 py-2 bg-light rounded-pill {% if key == 0 %} active {% endif %} " data-bs-toggle="pill" href="#{{ categorie.libelle |replace({' ': ''})}}">
                                        <span class="text-dark" style="width: 130px;">{{ categorie.libelle }}</span>
                                    </a>
                                </li>
                            {% endfor %}
                                
